<mvc:View
    controllerName="ExpenseManagement.controller.MainBoard"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:m="sap.suite.ui.microchart"
	xmlns:core="sap.ui.core">
	<Page 
		title="경비처리 프로그램 메인보드">
		<!--  메인보드 첫번째 라인  -->
		<l:VerticalLayout
			width="100%"
			class="gridWrapper sapUiMediumMarginTop">

				<!--  메인보드 첫번째 라인  -->
				<l:Grid containerQuery="true"
						defaultSpan="XL10 L10 M10 S12"
						defaultIndent="XL1 L1 M1">
					<!--  첫번째 라인 컴포넌트 그리드 -->
					<l:Grid containerQuery="true"
							defaultSpan="XL4 L4 M4 S12">
						<!--  전표 현황 카드 컴포넌트 -->

						<f:Card 
							height="480px">
							<f:header>
								<VBox>
									<card:Header 
										title="{/toMonth} 월 전표 현황"
										statusText="{/sumList} 건"
										iconSrc="sap-icon://write-new-document"/>
									<ComboBox
										class="sapUiTinyMargin"
										width="95%"
										selectedKey="{/paymentComboData}"
										placeholder="From City"
										selectionChange="onPaymentSelect">
										<core:Item key="A" text="요청건수 {/iReqList} 건" />
										<core:Item key="B" text="미결건수 {/iPayList} 건" />
									</ComboBox>
								</VBox>
							</f:header>
							<f:content>
								<List
									id="paymentlist"
									mode="SingleSelectMaster"
									height="480px"
									selectionChange=".onPaymentListSelection"
									showSeparators="None"
									items="{/paymentCard}">
									<CustomListItem>
										<HBox id="comboHeight" alignItems="Center" justifyContent="SpaceBetween">
											<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
												<Title level="H3" text="{name}" />
											</VBox>
											<ObjectStatus
												class="sapUiTinyMargin sapUiSmallMarginEnd"
												text="{number} 건"
												state="{State}" />
										</HBox>
									</CustomListItem>
								</List>
							</f:content>
						</f:Card>
						<w:Card 
							id="stackedBar" 
							visible="{authority>/stackedBar}"
							height="480px" 
							manifest="{cardManifests>/stackedBar}" 
							action="onAction">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="4" columns="4" />
							</w:layoutData>
						</w:Card> 
						<!-- 근태정보 카드 컴포넌트 -->
						<w:Card 
							id="calendar" 
							visible="{authority>/calendar}"
							height="480px" 
							manifest="{cardManifests>/calendar}">
							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="4" columns="4" />
							</w:layoutData>
						</w:Card>
					</l:Grid>
				</l:Grid>
				<!--  메인보드 두번째 라인  -->
				<l:Grid 
					containerQuery="true"
					defaultSpan="XL10 L10 M10 S12"
					defaultIndent="XL1 L1 M1">
					<!--  두번째 라인 컴포넌트 그리드 -->
					<l:Grid containerQuery="true"
							defaultSpan="XL6 L6">
						<!--  부서 사용경비 현황 카드 컴포넌트 -->
						<w:Card 
							id="donut" 
							visible="{authority>/donut}"
							height="500px" 
							manifest="{cardManifests>/donut}">
							<w:layoutData>
								<f:GridContainerItemLayoutData />
							</w:layoutData>
						</w:Card>
						<!--  부서원 사용경비 현황 카드 컴포넌트 -->
						<w:Card 
							id="stackedColumn" 
							visible="{authority>/stackedColumn}"
							height="500px" 
							manifest="{cardManifests>/stackedColumn}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="4" columns="4" />
							</w:layoutData>
						</w:Card>
					</l:Grid>
				</l:Grid>
				<!--  메인보드 세번째 라인  -->
				<l:Grid containerQuery="true"
						defaultSpan="XL10 L10 M10 S12"
						defaultIndent="XL1 L1 M1">
                    <!--  세번째 라인 컴포넌트 그리드 -->
					<l:Grid containerQuery="true"
							defaultSpan="XL6 L6">
						<w:Card 
							id="donut2" 
							visible="{authority>/donut2}"
							height="500px" 
							manifest="{cardManifests>/donut2}">
							<w:layoutData>
								<f:GridContainerItemLayoutData />
							</w:layoutData>
						</w:Card>
						<w:Card 
							id="stackedColumn2" 
							visible="{authority>/stackedColumn2}"
							height="500px" 
							manifest="{cardManifests>/stackedColumn2}">
							<w:layoutData>
								<f:GridContainerItemLayoutData rows="4" columns="4" />
							</w:layoutData>
						</w:Card>
					</l:Grid>
				</l:Grid>
				<!--  메인보드 네번째 라인  -->
				<l:Grid 
					containerQuery="true"
					defaultSpan="XL10 L10 M10 S12"
					defaultIndent="XL1 L1 M1">
					<!--  네번째 라인 컴포넌트 그리드 -->
					<l:Grid
						containerQuery="true"
						defaultSpan="XL6 L6 M6 S12">
						<!--  관리부서 및 프로젝트 사용경비 카드 컴포넌트 -->
						<w:Card 
							id="depExpensesCard" 
							visible="{authority>/depExpensesCard}"
							manifest="{cardManifests>/depExpenses}">
							<w:layoutData>
								<f:GridContainerItemLayoutData minRows="7" columns="4" />
							</w:layoutData>

						</w:Card>
						<!--  관리부서 및 프로젝트 사용경비 추이 카드 컴포넌트 -->
						<w:Card 
							id="depExpTransCard"
							visible="{authority>/depExpTransCard}"
						    height="500px"
						    manifest="{cardManifests>/depExpTrans}">
							<w:layoutData>
								<f:GridContainerItemLayoutData columns="6"/>
							</w:layoutData>
						</w:Card>
					</l:Grid>
				</l:Grid>
		</l:VerticalLayout>
    </Page>
</mvc:View>