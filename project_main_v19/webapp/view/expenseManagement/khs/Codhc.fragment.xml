<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">

    <Dialog
      id="codhcDialog"
      title="계정과목 조회"
      contentHeight="60%"
      contentWidth="60%">

            <content>

                <l:VerticalLayout
                    width="100%"
                    class="gridWrapper ">
                    <l:Grid
                        containerQuery="true"
                        defaultSpan="XL12 L12 M12 S12">
                            <OverflowToolbar class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                                <HBox>
                                <SearchField liveChange=".onSearchChange" value="{TEST>/nameSearch}" placeholder="계정과목검색" width ="200px"></SearchField>
                                </HBox> 
                                <ToolbarSpacer/> 
                            </OverflowToolbar>

                    </l:Grid>
                </l:VerticalLayout>


                <l:VerticalLayout
                    width="100%"
                    class="gridWrapper">
                    <l:Grid
                        containerQuery="true"
                        defaultSpan="XL12 L12 M12 S12">
                        <t:Table 
                            id="codhcTable"
                            rowSelectionChange="onRowSelection"
                            selectionMode="Single"
                            selectionBehavior="Row"
                            rows="{TEST>/oCodhc}"
                            visibleRowCount="5">
                            <t:columns>
                                <t:Column>
                                    <Label text="회계계정코드"></Label>
                                    <t:template>
                                        <Text text="{TEST>CODHC}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="계정과목명"></Label>
                                    <t:template>
                                        <Text text="{TEST>CODDN}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="통제성여부"></Label>
                                    <t:template>
                                        <Text text="{TEST>TJSYN}"> </Text>
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:Table>

                    </l:Grid>
                </l:VerticalLayout>

            </content>

            <buttons>
                <Button text="추가" press=".onAddData"/>
                <Button text="취소" press=".onCloseDialog"/>
            </buttons>

   </Dialog>

</core:FragmentDefinition>