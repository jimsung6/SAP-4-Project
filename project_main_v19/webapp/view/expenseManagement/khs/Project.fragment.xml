<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">

    <Dialog
      id="projectDialog"
      title="프로젝트 조회"
      contentHeight="60%"
      contentWidth="60%">

            <content>

                <l:VerticalLayout
                    width="100%"
                    class="gridWrapper ">
                    <l:Grid
                        containerQuery="true"
                        defaultSpan="XL12 L12 M12 S12">
                            <OverflowToolbar class="sapUiSmallMarginTop sapUiSmallMarginBottom">
                                <HBox>
                                <DateRangeSelection 
												displayFormat="{TEST>/displayFormat}"
												dateValue="{TEST>/oToday}"
												secondDateValue="{TEST>/oToday2}"
												change="handleChange"
												/>
                                </HBox> 
                                <HBox>
                                <SearchField liveChange=".onSearchChange" value="{TEST>/nameSearch}" placeholder="프로젝트검색" width ="200px"></SearchField>
                                </HBox>
                                <ToolbarSpacer/> 
                            </OverflowToolbar>

                    </l:Grid>
                </l:VerticalLayout>


                <l:VerticalLayout
                    width="100%"
                    class="gridWrapper">
                    <l:Grid
                        containerQuery="true"
                        defaultSpan="XL12 L12 M12 S12">
                        <t:Table 
                            id="projectTable"
                            rowSelectionChange="onRowSelection"
                            selectionMode="Single"
                            selectionBehavior="Row"
                            rows="{TEST>/oPcode}"
                            visibleRowCount="5">
                            <t:columns>
                                <t:Column>
                                    <Label text="프로젝트코드"></Label>
                                    <t:template>
                                        <Text text="{TEST>PCODE}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="프로젝트 이름"></Label>
                                    <t:template>
                                        <Text text="{TEST>PNAME}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="고객사명"></Label>
                                    <t:template>
                                        <Text text="{TEST>ZCLNT}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="프로젝트 시작일"></Label> 
                                    <t:template>
                                        <Text text="{TEST>SDATE}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="프로젝트 종료일"></Label> 
                                    <t:template>
                                        <Text text="{TEST>EDATE}"> </Text>
                                    </t:template>
                                </t:Column>

                            </t:columns>
                        </t:Table>

                    </l:Grid>
                </l:VerticalLayout>

            </content>

            <buttons>
                <Button text="추가" press=".onAddData"/>
                <Button text="취소" press=".onCloseDialog"/>
            </buttons>

   </Dialog>

</core:FragmentDefinition>