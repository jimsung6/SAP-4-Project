<core:FragmentDefinition
	controllerName="TableExample.controller.List26"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		contentWidth="30%"
		id="oSSpecificData"
		title="지급상세정보"
		titleAlignment="Center">
			<content>
			<f:Form>
				<f:layout>
					<f:ResponsiveGridLayout
						labelSpanS="6"
						columnsS="1" />
				<!-- columns는 화면 width에 따라서 FormContainer를 어떻게 배치할 건지 정함 -->		
				</f:layout>
				<f:formContainers>
					<f:FormContainer>
						<f:formElements>
							<f:FormElement label="전표번호">
								<f:fields>
									<Text text="{TEST>/fragData}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
						<f:formElements>
							<f:FormElement label="교육명">
								<f:fields>
									<Text text="{TEST>/Sitem/0/EDUNA}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
						<f:formElements>
							<f:FormElement label="교육기관">
								<f:fields>
									<Text text="{TEST>/Sitem/0/EDUOR}" />
								</f:fields>
							</f:FormElement>
						</f:formElements>
						<f:formElements>
							<f:FormElement label="첨부">
								<f:fields>
									<Link href="{TEST>/Sitem/0/ADDIM}" text="영수증 첨부 자료" target="_blank"/>
								</f:fields>
							</f:FormElement>
						</f:formElements>
					</f:FormContainer>
				</f:formContainers>
			</f:Form>
		</content>
            <buttons>
                <Button text="확인" press=".onCloseDialog"/>
            </buttons>
	</Dialog>
</core:FragmentDefinition>