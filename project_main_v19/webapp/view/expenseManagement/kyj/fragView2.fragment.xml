<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">

    <Dialog
      id="CodhcDialog"
      title="계정과목 조회"
      contentHeight="60%"
      contentWidth="60%">

            <content>

                <l:VerticalLayout
                    width="100%"
                    class="gridWrapper ">
                    <l:Grid
                    
                        containerQuery="true"
                        defaultSpan="XL12 L12 M12 S12">
                    	
                            <!--<OverflowToolbar class="sapUiSmallMarginTop sapUiSmallMarginBottom">-->
                            
                            	 
      <!--                      	 	<HBox justifyContent="End">-->
						<!--		 <Button width ="60px" text="조회" press="onCoSearch"></Button>  -->
						<!--</HBox>-->
						
                                <ToolbarSpacer/> 
                            <!--</OverflowToolbar>-->
						  <ToolbarSpacer/> 
                               
                    </l:Grid>
                </l:VerticalLayout>

                <l:VerticalLayout                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
                    width="100%"
                    class="gridWrapper">
                    <l:Grid
                        containerQuery="true"
                        defaultSpan="XL12 L12 M12 S12">
                        <t:Table 
                            id="CodhcTable"
                            rowSelectionChange="onCodeSelection"
                            selectionMode="Single"
                            selectionBehavior="Row"
                            rows="{/eCodhc}"
                            visibleRowCount="13">
                            <t:columns>
                                <t:Column>
                                    <Label text="회계코드"></Label>
                                    <t:template>
                                        <Text text="{CODHC}"> </Text>
                                    </t:template>
                                </t:Column>

                                <t:Column>
                                    <Label text="회계코드명"></Label>
                                    <t:template>
                                        <Text text="{CODDN}"> </Text>
                                    </t:template>
                                </t:Column>

                            </t:columns>
                        </t:Table>

                    </l:Grid>
                </l:VerticalLayout>

            </content>
		
				<buttons>
					
                <Button text="입력" press=".onCoData"/>
                <!--<Button text="취소" press=".onCoDialog"/>-->
            </buttons>
   </Dialog>

</core:FragmentDefinition>