<mvc:View
    controllerName="ExpenseManagement.controller.expenseManagement.kmg.ProjectList_MQ"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	
	<Page>  
		<content>
				<l:VerticalLayout
						width="100%"
						class="gridWrapper">
					<l:Grid
						containerQuery="true"
						defaultSpan="XL10 L12 M12 S12"
						defaultIndent="XL1">
						<OverflowToolbar>
							<HBox>
								<DatePicker
										id="DP10"
										width="150px"
										dateValue="{Project_MQ>/dateData}"  
										displayFormat="y-MM"/>
			
								<ComboBox width="200px" class="sapUiTinyMarginBegin" selectedKey="{Project_MQ>/stcodComboData}">
									<items>
										<core:ListItem key="B" text="승인요청" />
										<core:ListItem key="C" text="승인완료" />
										<core:ListItem key="D" text="반려(승인)"/>
										<core:ListItem key="E" text="지급(처리)"/>
										<core:ListItem key="F" text="지급(반려)"/>
									</items>
								</ComboBox>
								
									<ComboBox	class="sapUiTinyMarginBegin"
												selectedKey="{Project_MQ>/comboData}"
												showSecondaryValues="true"
												items="{Project_MQ>/oPcode}">
										<items>
											<core:ListItem key="{Project_MQ>PCODE}" text="{Project_MQ>PNAME}" additionalText = "{Project_MQ>PCODE}"/>
										</items>
									</ComboBox>
									
									<SearchField class="sapUiTinyMarginBegin" liveChange="onliveChange" value="{Project_MQ>/SearchFieldData}" placeholder="요청자 검색">
									</SearchField>
							</HBox>
							<ToolbarSpacer></ToolbarSpacer>
		
							<HBox justifyContent="End">
								<Button class="sapUiTinyMarginBegin sapUiTinyMarginEnd" visible="{Project_MQ>/sButton}" text="승인" press=".onSave"></Button>
								<Button class="sapUiTinyMarginBegin sapUiTinyMarginEnd" visible="{Project_MQ>/sButton}" text="반려" press=".onReject"></Button>
								<Button class="sapUiTinyMarginBegin sapUiTinyMarginEnd" visible="{Project_MQ>/sfilter}" text="조회" press=".onFiltering"></Button>
							</HBox>
							
						</OverflowToolbar>
					</l:Grid>
				</l:VerticalLayout>
	
	
	
				<!--승인 헤더-->
				<t:Table
					id="tableExample"
					visibleRowCount="{Project_MQ>/TRow}"
					cellClick=".onCellClick"
					rows="{Project_MQ>/info}"
					rowSelectionChange=".rowSelection"
					selectionMode="None"
					selectionBehavior="Row">

						<t:columns>
	
							<t:Column hAlign="Center">
								<Label text="프로젝트"></Label>
								<t:template>
									<Text text="{Project_MQ>PNAME}"></Text>
								</t:template>
							</t:Column>
	
							<t:Column hAlign="Center">
								<Label text="부서별"></Label>
								<t:template>
									<Text text="{Project_MQ>GNAME}"></Text>
								</t:template>
							</t:Column>
	
							<t:Column hAlign="Center">
								<Label text="요청자"></Label>
								<t:template>
									<Text text="{Project_MQ>ENAME}"></Text>
								</t:template>
							</t:Column>
	
							<t:Column hAlign="Center">
								<Label text="금액"></Label>
								<t:template>
									 <u:Currency
	                					value="{Project_MQ>PROPR}" maxPrecision="0" useSymbol="false"/>
								</t:template>
							</t:Column>
	
							<t:Column hAlign="Center">
								<Label text="건 수"></Label>
								<t:template>
									<Text text="{Project_MQ>SCOUNT}"></Text>
								</t:template>
							</t:Column>
						</t:columns>	
					</t:Table>
				
				
			<!--<HBox justifyContent="End">-->
			<!--					<Button class="sapUiTinyMarginBegin sapUiTinyMarginEnd" visible="{Project_MQ>/sButton2}" text="승인" press=".onSaveDT"></Button>-->
			<!--					<Button class="sapUiTinyMarginBegin sapUiTinyMarginEnd" visible="{Project_MQ>/sButton2}" text="반려" press=".onRejectDT"></Button>-->
			<!--</HBox>-->
			
			
				
				
			<!--승인 헤더 상세-->
			<t:Table
	            id="AppId"
	            visible="{/tableV}"
	            class="sapUiMediumMarginTop"
	            selectionMode="MultiToggle"
				rows="{/headerTableData}"
	            visibleRowCount="{/tableRow}"
	            selectionBehavior="Row"
	            rowSelectionChange=".rowSelection"
	            app:flag="{CODHC}">
				<!--cellClick=".onCellClick"-->
				
	           <t:columns>
	           		
					<t:Column hAlign="Center" visible="{/text}"  width="240px">
		                <Label text="프로젝트" />
		                <t:template>
		                     <Text text="{PNAME}" />
		                </t:template>
		            </t:Column>
		               	
					<t:Column hAlign="Center" visible="{/text}"  width="90px">
		                <Label text="계정과목" />
		                <t:template>
		                     <Link text="{CODDN}" press=".selDetail" app:flag="{CODHC}" />
		                </t:template>
		            </t:Column>
	
					<t:Column hAlign="Center" visible="{/text}"  width="80px">
		                <Label text="세부사항" />
		                <t:template>
		                     <Text text="{NOTE}" />
		                </t:template>
		            </t:Column>
		               	
					<t:Column hAlign="Center" visible="{/text}"  width="80px">
		                <Label text="결제방법" />
		                <t:template>
		                     <Text text="{PAYWANA}" />
		                </t:template>
		            </t:Column>
		            
					<t:Column hAlign="Center" visible="{/text}"  width="5%">
		                <Label text="금액(KRW)" />
		                <t:template>
		                    	<u:Currency
								value="{PROPR}" maxPrecision="0" useSymbol="false"/>
		                </t:template>
		            </t:Column>
		               	
					<t:Column hAlign="Center" visible="{/text}"  width="6%">
		                <Label text="영수증 발행일자" />
		                <t:template>
		                     <Text text="{REDATE}" />
		                </t:template>
		            </t:Column>
		               	
					<t:Column hAlign="Center" visible="{/text}"  width="10%">
		                <Label text="영수증 첨부" />
		                <t:template>
		                     <Link text="{REPHO}" href="{REPHO}" target="_blank" width="100%"/>
		                </t:template>
		            </t:Column>
		        
		            <t:Column hAlign="Center" width="70px">
		                <Label text="요청자" />
		                <t:template>
		                    <Text text="{ENAME}" />
		                </t:template>
		            </t:Column>
		        
				    <t:Column hAlign="Center" width="6%">
		                <Label text="승인 요청일자" />
		                <t:template>
		                    <Text text="{APPDAT}" />
		                </t:template>
		            </t:Column>
			
		    	   <t:Column hAlign="Center" width="5%">
		                <Label text="상태" />
		                <t:template>
		                    <Text text="{STCODNA}" />
		                </t:template>
		            </t:Column>
		            
				    <t:Column visible="{Project_MQ>/RDATEVisible}" hAlign="Center" width="6%">
		                <Label text="승인/반려 일자" />
		                <t:template>
		                    <Text text="{RDATE}" />
		                </t:template>
		            </t:Column>
		            
				    <t:Column visible="{Project_MQ>/RETTEXTVisible}" hAlign="Center" width="80px">
		                <Label text="반려사유" />
		                <t:template>
		                    <Text text="{RETTEXT}" />
		                </t:template>
		            </t:Column>
		            
		            <t:Column visible="{Project_MQ>/RETINPUTVisible}" hAlign="Center" width="80px">
		                <Label text="반려사유" />
		                <t:template>
		                    <Input value="{RETTEXT}" />
		                </t:template>
		            </t:Column>
		            
			  	   <t:Column visible="{Project_MQ>/ACDATVisible}" hAlign="Center" width="6%">
		                <Label text="지급 완료일" />
		                <t:template>
		                    <Text text="{ACDAT}" />
		                </t:template>
		            </t:Column>
	
	            </t:columns>
	        </t:Table>
	        
	        
	       
	    		<!--식수인원-->
				<t:Table 
					id="mainTableId"
					class="sapUiMediumMarginTop"
					rows="{/info}"
					rowSelectionChange="onMainTableSelect"
					visibleRowCount="1"
					visible="{/table1}"
					selectionMode="None">
					
					<t:columns>

						<t:Column hAlign="Center">
							<Label text="전표번호"></Label>
							<t:template>
								<Text text="{JPNUM}"> </Text>
							</t:template>
						</t:Column>

						<t:Column hAlign="Center">
							<Label text="항목번호"></Label>
							<t:template>
								<Text text="{HANGN}"> </Text>
							</t:template>
						</t:Column>

						<t:Column hAlign="Center">
							<Label text="식수인원"></Label>
							<t:template>
								<Text text="{SIKSU}"> </Text>
							</t:template>
						</t:Column>

					    
						<t:Column hAlign="Center">
							<Label text="사원번호"></Label>
							<t:template>
								<Text text="{EMPNO}"> </Text>
							</t:template>
						</t:Column>

						<t:Column hAlign="Center">
							<Label text="사원이름"></Label>
							<t:template>
								<Text text="{ENAME}"> </Text>
							</t:template>
						</t:Column>

						<t:Column hAlign="Center">
							<Label text="비고"></Label>
							<t:template>
								<Text text="{REMARK}"> </Text>
							</t:template>
						</t:Column>
					
						
						
						
					</t:columns>
				</t:Table>
			
			
			<!--유류대-->
			<t:Table 
					id="ryuTableId"
					rows="{/OilTable}"
					class="sapUiMediumMarginTop"
					rowSelectionChange="onMainTableSelect"
					visibleRowCount="1"
					selectionMode="None"
					visible="{/OTable}">
				
			<t:columns>

						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="차종"></Label>
							<t:template>
								<Text text="{CARTY}"> </Text>
							</t:template>
						</t:Column>


						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="유류"></Label>
							<t:template>
								<Text text="{OILTY}"> </Text>
							</t:template>
						</t:Column>

						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="거리"></Label>
							<t:template>
								<Text text="{HOMET}"> </Text>
							</t:template>
						</t:Column>

						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="금액"></Label>
							<t:template>
								<Text text="{PROPR}"> </Text>
							</t:template>
						</t:Column>

						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="비고"></Label>
							<t:template>
								<Text text="{BIGO}" textAlign="Center">
								</Text>
							</t:template>
						</t:Column>


						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="이미지"></Label>
							<t:template>
								<Link text="첨부" href="{ADDIM}" target="_blank" width="100%"/>
							</t:template>
						</t:Column>
							
						</t:columns>
				</t:Table>		
               
               
               <!--교육비-->
               	<t:Table 
					id="kyoTableId"
					rows="{/kyoinfo}"
					rowSelectionChange="onMainTableSelect"
					visibleRowCount="1"
					class="sapUiMediumMarginTop"
					selectionMode="None"
					visible="{/table2}">
			
					<t:columns>

						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="날짜(From)"></Label>
							<t:template>
								 <DatePicker
									dateValue="{FDATE}"
									textAlign="Center"
									editable="false"
									valueFormat= "yyyy-MM-dd"/>
							</t:template>
						</t:Column>

						<t:Column  visible="{/Otext}" hAlign="Center">
							<Label text="날짜(To)"></Label>
							<t:template>
								 <DatePicker
									dateValue="{TDATE}"
									textAlign="Center"
									editable="false"
									valueFormat= "yyyy-MM-dd"/>
							</t:template>
						</t:Column>

						<t:Column  visible="{/Otext}" hAlign="Center">
							<Label text="교육명"></Label>
							<t:template>
								<Text text="{EDUNA}"> </Text>
							</t:template>
						</t:Column>

						<t:Column  visible="{/Otext}" hAlign="Center">
							<Label text="교육기관명"></Label>
							<t:template>
								<Text text="{EDUOR}"> </Text>
							</t:template>
						</t:Column>

						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="금액"></Label>
							<t:template>
								<Text text="{PROPR}"/>
							</t:template>
						</t:Column>
						
						<t:Column visible="{/Otext}" hAlign="Center">
							<Label text="비고"></Label>
							<t:template>
								<Text text="{BIGO}"/>
							</t:template>
						</t:Column>

						<t:Column  visible="{/Otext}" hAlign="Center">
							<Label text="이미지"></Label>
							<t:template>
								<Link text="첨부" width="100%"/>
							</t:template>
						</t:Column>
						
					</t:columns>
				</t:Table>
					</content>
               </Page>  
               
</mvc:View>